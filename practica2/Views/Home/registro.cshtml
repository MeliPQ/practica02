@{
    ViewData["Title"] = "Home Page";
    Layout = "plantilla";
}

<body style="background-color: green; color:white;">
<h1>Formulario de Registro</h1>

    <form method="post">

        <div class="form-group">
            <label for="">Nombre completo:</label>
            <input type="text" name="nombre" id="" class="form-control">
        </div>

        <div class="form-group">
            <label for="">Tipo de mascota que desea adoptar:</label>
            <select class="form-control" type="text" name="tipo" id="tipo">
                <option selected>Tipo de mascota que desee seleccionar</option>
                <option value="Gato">Gato</option>
                <option value="Perro">Perro</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="">Mensaje:</label>
            <textarea name="mensaje" id="" cols="20" rows="5" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="">Telefono:</label>
            <input type="number" name="telefono" id="" class="form-control">
        </div>

        <div class="form-group">
            <label for="">Distrito:</label>
            <select class="form-control" type="text" name="distrito" id="distrito">
                <option selected>Distrito que desee selccionar</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
            </select>
        </div>

        <div class="form-group">
            <label for="">Direcci√≥n:</label>
            <input type="text" name="direccion" id="" class="form-control">
        </div>

        <a asp-area="" asp-controller="Home" asp-action="RegistroConfirmacion" class="btn btn-primary">Adoptar Mascota</a>
    </form>
</body>